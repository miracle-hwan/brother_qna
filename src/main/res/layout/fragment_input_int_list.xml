<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bean"
            type="com.brother.ptouch.sdk.printdemo.viewmodel.InputIntListViewModel.DisplayBean" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/template_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.components.InputIntListFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/colorBackground"
                    app:menu="@menu/toolbar_delete_menu"
                    app:navigationIcon="@drawable/ic_baseline_arrow_back_24" />
            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:text="@string/input_numbers_with_separated" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:autofillHints=""
            android:inputType="text"
            android:lines="1"
            android:onTextChanged="@{bean::onTextChanged}"
            android:text="@{bean.intListString}"
            tools:ignore="LabelFor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:text="@{bean.message}"
            android:textColor="@android:color/holo_red_light"
            android:visibility="@{bean.message.empty ? View.GONE : View.VISIBLE}" />
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                       
                                                                                           

                                                                                 

                                           
           

    <LinearLayout
        android:id="@+id/template_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.components.SelectEnumFragment" android:tag="layout/fragment_edit_template_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/colorBackground"
                    app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                    app:title="@string/print_template" />
            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <RadioGroup
            android:id="@+id/edit_template_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:tag="binding_1"                             
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/edit_template_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:tag="binding_2"                                             
                android:text="@string/edit_index" />

            <RadioButton
                android:id="@+id/edit_template_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:tag="binding_3"                                                  
                android:text="@string/edit_object" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/edit_template_index_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:tag="binding_4"                                                                           >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/edit_index" />

            <EditText
                android:id="@+id/edit_template_index_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="number"
                android:lines="1"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_template_object_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:tag="binding_5"                                                                                >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/edit_object" />

            <EditText
                android:id="@+id/edit_tempalte_object_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="text"
                android:lines="1"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/edit_text" />

            <EditText
                android:id="@+id/edit_template_text_editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="text"
                android:lines="1"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/edit_template_encoding_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">


            <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/encoding" />

            <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/edit_template_encoding_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="18pt"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_template_add_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:text="@string/add_object"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_template_delete_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:text="@string/delete_object"
                android:textAllCaps="false" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/edit_template_print_button"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/edit_template_data_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_input" />
            </ScrollView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_template_print_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="16dp"
                android:background="@drawable/button_border_bg"
                android:elevation="16dp"
                android:text="@string/print"
                android:textAllCaps="false" />
        </RelativeLayout>
    </LinearLayout>
         
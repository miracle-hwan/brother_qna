<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:id="@+id/printer_config_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_borderless_bg"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp" android:tag="layout/item_recycler_config_item_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/simple_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/simple_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
    </LinearLayout>
         